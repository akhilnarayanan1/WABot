{
    "compilerOptions": {
      "module": "CommonJS",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "ES2017",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
    },
    "compileOnSave": true,
    "include": [
      "src"
    ]
}